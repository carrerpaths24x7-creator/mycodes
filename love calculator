<body>
  <div class="container">
    <h1>‚ù§Ô∏è Love Calculator ‚ù§Ô∏è</h1>
    <div class="input-group">
      <label>Your Name</label>
      <input type="text" id="name1" placeholder="Enter first name">
    </div>
    <div class="input-group">
      <label>Partner Name</label>
      <input type="text" id="name2" placeholder="Enter second name">
    </div>
    <button onclick="calculateLove()">Calculate Love %</button>
    <div class="result" id="result"></div>
    <div class="emoji" id="emoji"></div>
  </div>

<script>
function calculateLove(){
  const n1 = document.getElementById('name1').value.trim();
  const n2 = document.getElementById('name2').value.trim();
  if(!n1 || !n2){
    document.getElementById('result').innerText = 'Please enter both names';
    document.getElementById('emoji').innerText = '';
    return;
  }
  let percent = Math.floor(Math.random()*140); // allow above 100
  document.getElementById('result').innerText = `Love Percentage: ${percent}%`;

  const emojiEl = document.getElementById('emoji');
  emojiEl.classList.remove('blast');
  if(percent <= 40){
    emojiEl.innerText = 'üò¢';
  } else if(percent <= 70){
    emojiEl.innerText = 'üòç';
  } else if(percent <= 100){
    emojiEl.innerText = 'üí•‚ù§Ô∏èüí•';
  } else {
    emojiEl.innerText = 'üí•üíïüíï‚ù§Ô∏èüíïüíïüí•';
    emojiEl.classList.add('blast');
  }
}
</script>
